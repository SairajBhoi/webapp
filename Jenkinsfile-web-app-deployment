pipeline {
    agent any

    stages {
          stage('checkout') {
            steps {
                   git branch: 'Ansible-minikube', credentialsId: 'github-jenkins', url: 'git@github.com:SairajBhoi/webapp.git'
            }
          }
        

           stage('web-app-deployment') {
              steps {
                    
                    ansiblePlaybook credentialsId: 'test', disableHostKeyChecking: true, installation: 'Ansible', inventory: '/var/lib/jenkins/workspace/AWS-project-minikube-deployment/inventory.ini', playbook: '/var/lib/jenkins/workspace/AWS-project-minikube-deployment/playbook_k8s.yaml'
              }
           }

        
        }
}
    


